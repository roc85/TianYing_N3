<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_default"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/textTimeRcv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center" />

    <RelativeLayout
        android:id="@+id/infoBoxRcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageChatRcvHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <LinearLayout
            android:id="@+id/textBox"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/imageChatRcvHead"
            android:background="@drawable/dialogue_right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textRcv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="aaaa"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textSendStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/textBox"
            android:text=""
            android:textColor="#b0b0b0" />

        <LinearLayout
            android:id="@+id/posInfoBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textBox"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/imageChatRcvHead"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/dialogue_under_icon_location" />

            <TextView
                android:id="@+id/textRcvPos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aaa" />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>